@model ProductListViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Product List</h1>

<table class="table table-responsive">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock Unit</th>
        </tr>
    </thead>
    @foreach(var product in Model.Products)
    {
        <tr>
            <td>@product.ProductName</td>
            <td>@product.QuantityPerUnit</td>
            <td>@product.UnitPrice</td>
            <td>@product.UnitsInStock</td>
            <td><a class="btn btn-sm btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">Add to Cart</a></td>
        </tr>
    }
</table>
